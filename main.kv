<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "Toggle Motor"
        id: toggleMotorButton
        font_size: 15
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.toggleMotor()

    DPEAButton:
        text: "Positive"
        id: toggleMotorDirection
        font_size: 20
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.75
        color: 0.1, 0.4, 0.6, 1
        on_press: root.toggleMotorDirection()

    DPEAButton:
        text: "runMachine"
        id: runMachine
        font_size: 20
        size: 150, 100
        x: root.width * 0.25
        y: root.height * 0.25
        color: 0.05, 0.5, 0.7, 1
        on_press: root.run()

    Label:
        id: motorPositionLabel
        size_hint: None, None
        font_size: 20
        center_x: root.width * 0.6
        center_y: root.height * 0.3
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: limitSwitchLabel
        size_hint: None, None
        font_size: 20
        center_x: root.width * 0.5
        center_y: root.height * 0.55
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        text: "Limit Switch Open"

    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: joy_label
        size_hint: None, None
        font_size: 30
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0